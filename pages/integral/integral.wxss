/* pages/integral/integral.wxss */
@import "../../template/header/header.wxss";

.integral-info {
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.integral-list-image {
    width: 40rpx;
    height: 40rpx;
    margin-top: 5rpx;
}

.integral-info text {
    margin-left: 20rpx;
    color: #D6A68A;
}

.integral-break {
    width: 100%;
    height: 20rpx;
    margin-top: 20rpx;
    background-color: #F5F5F5;
}

.integral-goods {
    margin-top: 10rpx;
    padding: 20rpx 30rpx ;
}

.integral-goods-item {
    width: 100%;
    display: flex;
    padding-top: 10rpx;
    flex-direction: row;
    justify-content: flex-start;
    border-bottom: 2rpx solid #eee;
}

.goods-item-image {

}

.goods-item-image image {
    width: 180rpx;
    height: 180rpx;
}

.goods-item-integral {
    width: 300rpx;
    display: flex;
    flex-direction: column;
}

.goods-item-integral text {
    line-height: 90rpx;
    padding-left: 20rpx;
}

.goods-item-integral text:nth-child(1) {
    color: #555555;
    font-size: 34rpx;
}

.goods-item-integral text:nth-child(2) {
    color: #D6A68A;
    font-size: 28rpx;
    font-weight: bold;
}

.goods-item-button {
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.goods-item-button button {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    background-color: #D6A68A;
    color: #eeeeee;
}

.cart-pop {
    padding: 20rpx 30rpx 30rpx 30rpx;
}

.close-icon {
    width: 20%;
    position: relative;
}

.close-icon image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.cart-info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 30rpx;
}

.cart-info-image {
    width: 30%;
}

.cart-info-image image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
    box-shadow: #eeeeee 0px 0px 5px 5px;
}

.cart-info-price {
    width: 50%;
}

.cart-info-price text {
    line-height: 60rpx;
    font-size: 32rpx;
    color: #8B8378;
    display: block;
}

.cart-specification {
    margin-top: 30rpx;
    padding: 20rpx 0rpx;
}

.cart-specification text {
    color: #333333;
    font-size: 32rpx;
    line-height: 60rpx;
}

.cart-specification-item {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-top: 20rpx;
}

.cart-specification-item view {
    padding: 0 10rpx;
}

.cart-specification-item button {
    height: 60rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    line-height: 60rpx;
}

.cart-specification-others {
    background-color: #fff;
    color: #D6A68A;
    border: 2rpx solid #D6A68A;
}

.cart-specification-select {
    color: #fff;
    background-color: #D6A68A;
}


.cart-number {
    padding: 20rpx 0rpx;
}

.cart-number text {
    color: #333333;
    font-size: 32rpx;
    line-height: 60rpx;
}

.cart-info-number {
    margin-top: 20rpx;
}

.cart-button {
    margin-top: 40rpx;
}

.cart-button button {
    height: 60rpx;
    width: 480rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    background-color: #D6A68A;
    color: #fff;
    box-shadow: #eeeeee 0px 0px 5px 5px;
    border-radius: 30rpx;
}

.total-integral {
    font-size: 32rpx;
    line-height: 50rpx;
    color: #D6A68A;
}

.goods-item-change {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 20rpx;
}

.item-change-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    line-height: 120rpx;
    color: #D6A68A;
}

.item-change-content text:nth-child(2) {
    color: #D6A68A;
    font-size: 28rpx;
    font-weight: bold;
    margin-left: 40rpx;
}

.item-change-content text:nth-child(1) {
    color: #555555;
    font-size: 34rpx;
}

.item-change-time {
    font-size: 28rpx;
    color: #555555;
}

.address-content {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    padding: 20rpx 40rpx 0rpx 40rpx;
    color: #333333;
}

.address-content-left {
    width: 80%;
}

.address-content-left text {
    display: block;
    line-height: 70rpx;
}

.address-content-right {
    width: 20%;
    position: relative;
}

.address-content-right image {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 40rpx;
    right: 20rpx;
}

.no-data {
    padding-left: 60rpx;
    color: #cccccc;
    line-height: 60rpx;
}




