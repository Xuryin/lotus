/* pages/classify/classify.wxss */
/**index.wxss**/
@import "../../template/list.wxss";
.index-title {
    display: flex;
    justify-content: flex-start;
    margin-top: 20rpx;
}

.title-name {
    font-size: 75rpx;
}

.classify-list {
    width: 100%;
    text-align: center;
    display: flex;
    justify-content: flex-start;
    flex-direction: row;
    margin-top: 30rpx;
}

.classify-name {
    width: 42%;
}

.classify-name-item {
    height: 80rpx;
    position: relative;
    text-align: right;
    padding-right: 65rpx;
    line-height: 60rpx;
}

.classify-name-text {
    color: #333333;
    font-size: 32rpx;
}

.classify-name-text-selected {
    color: #D6A68A;
    font-size: 34rpx;
    font-weight: bold;
}

.classify-name-img {
    width: 55rpx;
    height: 55rpx;
    position: absolute;
    right: 0;
    top: 10rpx;
}

.classify-content {
    width: 58%;
   /* border: 2rpx solid red;*/
}

.classify-content-item {
    display: flex;
    flex-direction: column;
    width: 160rpx;
   /* border: 2rpx solid red;*/
}

.classify-content-img {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    box-shadow: 0 0 8rpx 8rpx #eeeeee;
}

.classify-content-name {
    /*border: 4rpx solid red;*/
    font-size: 26rpx;
    line-height: 50rpx;
}

.classify-img {
   /* border: 2rpx solid red;*/
    width: 100%;
    height: 280rpx;
}

.classify-img image {
    width: 390rpx;
    height: 260rpx;
    border-radius: 20rpx;
}

.wux-accordion__title {
    text-align: center;
}
