/* pages/personal/personal.wxss */
.personal-page {
    text-align: center;
    width: 100%;
    max-width: 750rpx;
}

.userInfo-content {
    width: 100%;
}

.avatarUrl-img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.userInfo-name {
    position: relative;
    left: 30rpx;
}

.userInfo-name-img {
    width: 60rpx;
    height: 60rpx;
}

.goods_group {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-top: 40rpx;
    width: 100%;
}

.group-item {
    width: 25%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    padding-bottom: 20rpx;
}

.group-img-content {
    width: 100%;
}

.group-item-img {
    width: 60rpx;
    height: 60rpx;
}

.group-item-text {
    font-size: 24rpx;
    line-height: 32rpx;
}

.userInfo-break {
    width: 100%;
    height: 20rpx;
    background-color: #F5F5F5;
}

.info-list {
   /* border: 2rpx solid red;*/
    width: 100%;
    max-width: 750rpx;
}

.info-list-item {
    height: 120rpx;
    line-height: 120rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 2rpx dashed #eee ;
}

.info-list-left {
    width: 10%;
}

.info-list-right {
    width: 10%;
}

.info-list-text {
    width: 80%;
    text-align: left;
    font-size: 32rpx;
    color: #333333;
}

.list-left-img,  .list-right-img{
    height: 30rpx;
    width: 30rpx;
}

