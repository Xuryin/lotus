<import src="../../template/header/header.wxml"/>
<view>
    <template is="header" data="{{title}}"></template>
</view>

<view>
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="section">
            <view class="section__title">联系人</view>
            <input name="input" placeholder="姓名" class="section-input" bindinput="inputValue" data-key="contract_name"/>
        </view>
        <view class="section">
            <view class="section__title">手机号码</view>
            <input name="input" placeholder="11位手机号码" class="section-input" bindinput="inputValue" data-key="contract_phone"/>
        </view>
