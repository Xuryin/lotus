/* pages/address/address.wxss */
@import "../../template/header/header.wxss";
.coupon-content {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.coupon-item {
    width: 540rpx;
    height: 200rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-top: 20rpx;
}

.coupon-item:before, .coupon-item:after {
    content: " ";
    width: 0;
    height: 100%;
    position: absolute;
    top: 10rpx;
}

.coupon-item:before {
    border-right: 16rpx dotted white;
    left: -8rpx;
}

.coupon-item:after {
    border-left: 16rpx dotted white;
    right: -8rpx;
}

.coupon-left {
    width: 37%;
    background-color: #FAEBD7;
    display: flex;
    flex-direction: column;
    color: #8B7765;
}

.coupon-left text {
    display: block;
    text-align: center;
}

.coupon-left text:nth-child(1) {
    line-height: 130rpx;
    font-size: 50rpx;
    font-weight: bold;
}

.coupon-left text:nth-child(2) {
   color: #8B8378;
}

.coupon-right {
    width: 63%;
    background-color: #FFFAF0;
    color: #8B7765;
    position: relative;
}

.coupon-right-text {
    line-height: 200rpx;
    text-align: center;
    position: static;
    z-index: 20;
    margin-left: 40rpx;
}

.coupon-right-content {
    position: absolute;
    z-index: 1;
    right: 10rpx;
    bottom: 20rpx;
}

.coupon-right-image {
    width: 130rpx;
    height: 130rpx;
}
