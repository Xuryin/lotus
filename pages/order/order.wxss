/* pages/order/order.wxss */
@import "../../template/header/header.wxss";
.address-content {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    padding: 40rpx;
}

.address-content-left {
    width: 80%;
}

.address-content-left text {
    display: block;
    line-height: 70rpx;
}

.address-content-right {
    width: 20%;
    position: relative;
}

.address-content-right image {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 40rpx;
    right: 20rpx;
}

.order-break {
    width: 100%;
    height: 20rpx;
    background-color: #F6F6F6;
}

.order-item {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    padding: 20rpx 20rpx 10rpx 20rpx;
    border-bottom: 2rpx dashed #eee;
}

.order-item-image {
    padding: 0;
    margin: 0;
}

.order-item-image image {
    width: 160rpx;
    height: 160rpx;
}

.order-item-content {
    padding-left: 20rpx;
    width: 560rpx;
}

.order-item-content text {
    display: block;
}

.order-item-content text:nth-child(1) {
    line-height: 55rpx;
    color: #333333;
    font-size: 36rpx;
}

.order-item-content text:nth-child(2) {
    line-height: 55rpx;
    color: #DADADA;
    font-size: 28rpx;
}

.order-item-content text:nth-child(3) {
    line-height: 70rpx;
    color: #D6A68A;
}

.order-item-number {
    width: 100rpx;
    position: relative;
}

.order-item-number text {
    position: absolute;
    bottom: 10rpx;
    color: #DADADA;
}

.order-others {
    margin-bottom: 120rpx;
}

.order-others view {
    height: 90rpx;
    width: 100%;
    line-height: 90rpx;
    padding: 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.order-others-post {
    font-size: 32rpx;
}

.order-others-post text:nth-child(1) {
    width: 80%;
    color: #333333;
}

.order-others-post text:nth-child(2) {
    width: 20%;
    color: #DADADA;
}

.order-others-mention input{
    height: 90rpx;
    font-size: 28rpx;
    color: #333333;
}

.order-others-total {
    font-size: 32rpx;
    color: #D6A68A;
}

.order-others-total text:nth-child(1) {
    width: 80%;
}

.order-others-total text:nth-child(2) {
    width: 20%;
    font-size: 34rpx;
}

.order-button {
    width:100%;
    background-color: #D6A68A;
    color: #ffffff;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    z-index: 99;
}
