/**app.wxss**/
.page {
  width: 100%;
}

.container {
  max-width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  margin-left: 60rpx;
}

.right-decoration {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  top: -15rpx;
}

.without-data {
  display: flex;
  flex-direction: column;
}

.without-data text{
  color: #ccc;
  text-align: center;
  margin-top: 400rpx;
}

.button-default {
  margin-top: 300rpx;
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  border: 1rpx solid #D6A68A;
  background-color: #D6A68A;
  color: white;
}


button::after {
  border: none
}
